\usepackage{pgfplots}
\pgfplotsset{width=3in,compat=1.12}
\newcommand{\graph}[1]{%
\begin{tikzpicture}
	\begin{axis}[
		grid=none,
		axis lines*=center,
		samples=400,
		unbounded coords=jump,
		xmin=-10,xmax=10,
		ymin=-10,ymax=10,
		domain=-10:10,
		restrict y to domain=-40:40
	]
		\addplot[mark=none]{#1};
	\end{axis}
\end{tikzpicture}}
